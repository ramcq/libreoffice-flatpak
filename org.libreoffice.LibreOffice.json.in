{
    "app-id": "org.libreoffice.LibreOffice",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.24",
    "sdk": "org.gnome.Sdk",
    "command": "/app/libreoffice/program/soffice",
    "separate-locales": false,
    "build-options" : {
        "arch": {
            "arm": {
                "cflags": "-mfpu=neon"
            }
        }
    },
    "modules": [
        {
            "name": "libreoffice",
            "sources": [
                {
                    "type": "git",
                    "url": "git://gerrit.libreoffice.org/core",
                    "branch": "libreoffice-5.4.1.2",
                    "disable-fsckobjects": true
                },
                {
                    "type": "shell",
                    "commands": [ "mkdir external/tarballs" ]
                }
            ],
            "buildsystem": "simple",
            "build-commands": [
                "./autogen.sh --prefix=/run/build/libreoffice/inst --with-distro=LibreOfficeFlatpak --without-system-xmlsec",
                "make",
                "make distro-pack-install-strip",
                "make cmd cmd='$(SRCDIR)/solenv/bin/assemble-flatpak.sh'"
            ]
        }
    ],
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--socket=system-bus",
        "--socket=session-bus",
        "--filesystem=host",
        "--env=LIBO_FLATPAK=1"
    ]
}
